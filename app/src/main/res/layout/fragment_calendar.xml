<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.main.calendar">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
    <CalendarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/calendar"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09-12-2021"
        android:id="@+id/date_text"
        android:textSize="20sp"/>
        <TableLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text="study plans"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="20sp"
                    android:layout_weight="4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:id="@+id/study_number"
                    android:padding="10sp"
                    android:text="0"
                    android:textSize="20sp"
                    android:layout_weight="4"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="10sp"
                    android:text="Assignments"
                    android:textSize="20sp"
                    android:layout_weight="4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:id="@+id/assign_number"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="0"
                    android:textSize="20sp"
                    android:layout_weight="4"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Exams"
                    android:textSize="20sp"
                    android:layout_weight="4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:id="@+id/exams_number"
                    android:padding="10sp"
                    android:text="0"
                    android:textSize="20sp"
                    android:layout_weight="4"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="10sp"
                    android:text="@string/lectures"
                    android:textSize="20sp"
                    android:layout_weight="4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:id="@+id/lectures_number"
                    android:padding="10sp"
                    android:text="0"
                    android:textSize="20sp"
                    android:layout_weight="4"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>



</LinearLayout>